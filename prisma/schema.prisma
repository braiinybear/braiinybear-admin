generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model VideoItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String
  thumbnail String
  title     String?
  createdAt DateTime @default(now())
}

model Mangement {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  role      MangementRole
}

enum MangementRole {
  ADMIN
  SALES
  TECHNICAL
  HR
}






model Course {
  id               String   @id @default(uuid()) @map("_id")
  title            String
  status           String
  image            String
  totalFee         String
  duration         String
  approvedBy       String
  category         String?
  shortDescription String
  fullDescription  String
  createdAt        DateTime @default(now())
}

model Blog {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  slug      String   @unique
  title     String
  image     String
  excerpt   String
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}

model UserInfo {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  email         String?
  userImg       String
  phoneNo       String
  fatherName    String
  motherName    String
  courseName    String
  aadharCardNo  String
  aadharBack    String
  aadharFront   String
  marksheets    String[]
  address       String
  paymentStatus PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())


  @@unique([phoneNo,aadharCardNo])
}
